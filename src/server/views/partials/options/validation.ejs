<fieldset id="validationOptions">
<div class="validationOptions d-flex justify-content-around mb-4">

    <div class="d-inline">
    <h4 class="d-block">OS</h4>
    <input type="radio" name="os" id="valWin" value="Windows" checked />
    <label for="valWin"><i class='fa-brands fa-windows'></i> Windows</label>
    <div>
      <input type="radio" name="os" id="valMac" value="Mac"  />
      <label for="valMac"><i class='fa-brands fa-apple'></i> Mac</label>
    </div>
  </div>
  <div class="d-inline-block">
   <h4>Validated</h4>
      <div>
        <input class="form-check-input" type="checkbox" value="loginSuccess" name="valLogin" checked/>
        <label class="form-check-label" for="valLogin">Login</label>
      </div>
      <div>
        <input class="form-check-input" type="checkbox" value="appsSuccess" name="valApps" checked/>
        <label class="form-check-label" for="valApps">Apps</label>
      </div>
      <div>
        <input class="form-check-input" type="checkbox" value="oneDriveSuccess" name="valOneDrive" checked/>
        <label class="form-check-label" for="valOneDrive">OneDrive</label>
      </div>
      <div>
        <input class="form-check-input" type="checkbox" value="vpnSuccess" name="valVPN" checked/>
        <label class="form-check-label" for="valVPN">VPN</label>
      </div>
  </div>
  
  <div class="d-inline-block">
    <h4>Issues</h4>
    <div>
      <input class="form-check-input" type="checkbox" value="accountFail" name="accountFail" />
      <label class="form-check-label" for="accountFail">Account</label>
    </div>
    <div>
      <input class="form-check-input" type="checkbox" value="contactFail" name="contactFail" />
      <label class="form-check-label" for="contactFail">No Contact</label>
    </div>
    <div>
      <input class="form-check-input" type="checkbox" value="vpnFail" name="vpnFail" />
      <label class="form-check-label" for="vpnFail">VPN / Aruba</label>
    </div>
    <div>
      <input class="form-check-input" type="checkbox" value="shipFail" name="shipFail" />
      <label class="form-check-label" for="shipFail">Shipping</label>
    </div>
    <div>
      <input class="form-check-input" type="checkbox" value="depFail" name="depFail" />
      <label class="form-check-label" for="depFail">DEP Enrollment</label>
    </div>
    <div>
      <input class="form-check-input" type="checkbox" value="schedFail" name="schedFail" />
      <label class="form-check-label" for="schedFail">Rescheduled</label>
    </div>
  </div>
  </div>
</fieldset>
